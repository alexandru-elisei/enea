{{!
    @template mod_enea/search_results_row
}}

<search_results_row>
<div class="row fitem">

    <div class="cols-xs-9 col-md-5 col-lg-5">
        <span class="text-left">
            <label class="no-bottom-margin form-check-label custom-control custom-checkbox">
                <input type="checkbox" name="{{$ elt_name}}{{/ elt_name}}" class="form-check-input">
                    <a class="link" href="{{$ course_link }}{{/ course_link}}">
                        {{$ course_title}}{{/ course_title}}
                    </a>
            </label>
        </span>

        <a class="btn btn-link p-a-0" role="button" tabindex="0" data-container="body" data-toggle="popover" data-placement="right" data-content="{{$ course_help}}{{/ course_help}}" name="help{{$ course_id}}{{/ course_id}}" data-trigger="focus">
            <i class="icon fa fa-question-circle-o text-info fa-fw" title="Help with {{$ course_title}}{{/ course_title}}">?</i>
        </a>
    </div>

    <div class="cols-xs-3 col-md-2 col-lg-2">
        <span class="text-left">{{$ course_time}}{{/ course_time}}</span>
        <input name="{{$ elt_name}}{{/ elt_name}}_rawtime" type="hidden" value="{{$ course_rawtime}}{{/ course_rawtime}}">
    </div>

</div>
